# Environment variables for the API service
# This file should not be committed to version control.
NODE_ENV=production
PORT=3000
API_PREFIX=/api

# Database configuration
# Update these values according to your database setup
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=root
DB_PASSWORD=your_database_password
DB_DATABASE=desknest
DB_SYNCHRONIZE=false
DB_LOGGING=true

# JWT configuration
# Ensure to replace the secret keys with secure values
# Generate a secure random key for JWT_SECRET and JWT_REFRESH_SECRET
# Example command to generate a secure key:
# openssl rand -hex 32
JWT_ENABLED=true
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=3600s
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=7d

# Nginx configuration
NGINX_ENABLED=true
NGINX_HOST=localhost
NGINX_PORT=80
CORS_ORIGIN=http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Logging configuration
# Adjust the log level and directory as needed
LOG_LEVEL=debug
LOG_DIR=./logs

# Swagger configuration
# Enable or disable Swagger documentation
SWAGGER_ENABLED=true
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
SWAGGER_PATH=/api-docs